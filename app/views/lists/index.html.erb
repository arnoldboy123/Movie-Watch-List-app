<div id="banner">
  <h1>The only movie curator you need</h1>
  <h3>Grab some popcorn and choose your movie for tonight</h3>
</div>

<%= cl_image_tag(lco9msza6tjxmud0zvg5, width: 400, height: 300, crop: :fill) %>

<%= cl_image_tag(yn6njg5yl4pxetfntwst, width: 150, height: 150, crop: :thumb, gravity: :face) %>

<div class="container">
  <h1 class="mt-3 mb-3">My list</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-3 mb-3 p-3 bg-secondary">
          <div class="card-body d-flex justify-content-center">
            <%= link_to "#{list.name}", list_path(list), class: "card-title text-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "create a new movie list", new_list_path, class: "btn btn-light mt-3 mb-3" %>
</div>
